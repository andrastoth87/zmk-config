#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include "keys_hu.h"

#define xxx &none
#define ___ &trans

#define HME 0  // Home
#define ACC 1  // Accent
#define MEDNUM  2  // Media and numpad
#define MSC  3  // Miscellaneous

/ {
    behaviors {
        sctd: shift_caps_lock_tap_dance {
            compatible = "zmk,behavior-tap-dance";
            label = "SHIFT_CAPS_LOCK_TOGGLE";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&sk LSHFT>, <&kp CAPSLOCK>;
        };

         tdsym1: tap_dance_symbols_1 {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_SYMBOLS_1";
            #binding-cells = <0>;
            tapping-term-ms = <300>;
            bindings = <&kp HU_DOT>, <&kp HU_COMMA>, <&kp HU_QMARK>, <&kp HU_EXCL>;
        };

        tdsym2: tap_dance_symbols2 {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_SYMBOLS_2";
            #binding-cells = <0>;
            tapping-term-ms = <300>;
            bindings = <&kp HU_LPAR>, <&kp HU_LBKT>, <&kp HU_LBRC>;
        };

        tdsym3: tap_dance_symbols_3 {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_SYMBOLS_3";
            #binding-cells = <0>;
            tapping-term-ms = <300>;
            bindings = <&kp HU_UNDER>, <&kp HU_EQUAL>, <&kp HU_SQT>, <&kp HU_DOUBLE_QUOTES>;
        };

        capi: capital_i_acute {
            compatible = "zmk,behavior-mod-morph";
            label = "CAPITAL_I_ACUTE_MOD";
            #binding-cells = <0>;
            bindings = <&kp HU_I_ACUTE>, <&kp HU_I_ACUTE_CAP>;
            mods = <(MOD_LSFT)>;
        };

    };
        keymap {
                compatible = "zmk,keymap";

                home_layer {
                        bindings = <
   &kp TAB    &kp Q  &kp W        &kp E        &kp R        &kp T           &kp Z    &kp U       &kp I     &kp O    &kp P    &kp BSPC
   &sk LCTRL  &kp A  &kp S        &kp D        &kp F        &kp G           &kp H    &kp J       &kp K     &kp L    &to 1    &key_repeat
   &sctd      &kp Y  &mt LC(X) X  &mt LC(C) C  &mt LC(V) V  &kp B           &kp N    &kp M       &tdsym1   &tdsym2  &tdsym3  &mt LA(F4) ESC
                                  &kp RALT     &to HME      &kp SPACE       &kp RET  &to MEDNUM  &kp RGUI
                        >;
                };

                accent_layer {
                        bindings = <
   ___  ___             ___  &kp HU_E_ACUTE  ___      ___          &kp  HU_U_ACUTE  &kp HU_U_UMLAUT        &capi  &kp HU_O_UMLAUT  &kp HU_O_DOUBLE_ACUTE  ___
   ___  &kp HU_A_ACUTE  ___  ___             ___      ___          ___              &kp HU_U_DOUBLE_ACUTE  ___    &kp HU_O_ACUTE   ___                    ___
   ___  ___             ___  ___             ___      ___          ___              ___                    ___    ___              ___                    ___
                             ___             ___      ___          ___              &to MEDNUM             ___
                        >;
                };

                media_numpad_layer {
                        bindings = <
   ___  ___  ___  ___  ___  ___          ___  ___      ___  ___  ___  ___
   ___  ___  ___  ___  ___  ___          ___  ___      ___  ___  ___  ___
   ___  ___  ___  ___  ___  ___          ___  ___      ___  ___  ___  ___
                  ___  ___  ___          ___  &to MSC  ___
                        >;
                };
            };
   };
